<%# partial for representing all comments %>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment: </strong>
    <%= comment.body %>
  </p>

  <td><%= link_to 'Destroy', article_comment_path(@article, comment),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></td>
<% end %>